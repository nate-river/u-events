/* pages/me/me.wxss */

.my{
  width:100%;
  height:324rpx;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  position:relative;

}
.cover{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  background: rgba(255, 255, 255, 0.3);
  filter: blur(35rpx);
}
.my .my-photo{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  z-index: 55;
}

.tab .tab-text.active{
  color:#ee0018;
  border-bottom: 2rpx solid #ee0018;
}
.list{
  width:100%;
  background: #f9f9f9;
  padding:30rpx 24rpx;
  box-sizing: border-box;
}
.list .list-line{
  width:100%;
  border-left:1px solid #e5e5e5;
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.list .list-box{
  width:100%;
  height:100%;
  position: relative;
}
.list .list-dot{
  width:10rpx;
  height:10rpx;
  background: #000;
  border-radius: 50%;
  position: absolute;
  top:13rpx;
  left:-35rpx;
}
.list .list-time{
  color:#333;
  font-size:26rpx;
}
.list .list-item{
  border-radius: 5rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 15rpx 0 rgba(0, 0, 0, 0.3);
  padding:40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  margin:20rpx 0 20rpx;
}
.list-item .title{
  color:#333;
  font-size: 36rpx;
  font-weight: bold;
}
.list-item .des{
  color:#240e0e;
  font-size:28rpx;
  margin:20rpx 0 25rpx;
}
.list-item .time{
  color:#d1d1d1;
  font-size: 24rpx;
  font-weight: lighter;
}
.list-item .status{
  padding:10rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  background: green;
  position:absolute;
  bottom:50rpx;
  right:40rpx;
  text-align: center;
  color: #fff;
  font-size:20rpx;
}