/* pages/me/me.wxss */

page {
  background: #f7f7f7;
}

.my {
  width: 100%;
  height: 324rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  background-position: center;
  background-size: 100%;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #f7f7f7;
  /* opacity: .5; */
  filter: blur(35rpx);
}

.my .my-photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 55;
}

.my .nick-name {
  color: #fff;
  font-size: 26rpx;
  position: relative;
  z-index: 99;
}

.tab .tab-text.active {
  color: #ee0018;
  border-bottom: 2rpx solid #ee0018;
}

.list {
  width: 100%;
  background: #f7f7f7;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}

.list .list-line {
  width: 100%;
  /* border-left: 1px solid #666; */
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.list .list-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.list .list-dot {
  width: 10rpx;
  height: 10rpx;
  background: #999;
  border-radius: 50%;
  position: absolute;
  top: 14rpx;
  left: -34rpx;
}

.list .list-time {
  color: #333;
  font-size: 26rpx;
}

.list .list-item {
  border-radius: 5rpx;
  background: #fff;
  /* box-shadow: 5rpx 5rpx 50rpx 0rpx rgba(0, 0, 0, 0.1); */
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  margin: 20rpx 0 20rpx;
}

.list-item .title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #333;
  font-size: 34rpx;
}

.list-item .des {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666;
  font-size: 26rpx;
  margin: 20rpx 0 25rpx;
}

.list-item .time {
  color: #d1d1d1;
  font-size: 24rpx;
  font-weight: lighter;
}

.list-item .status {
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  background: #40a9ff;
  position: absolute;
  bottom: 30rpx;
  right: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
}
