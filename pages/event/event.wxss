/* pages/event/event.wxss */

page {
  background: #f7f7f7;
  color: #333;
  font-size: 28rpx;
  height: 100%;
}

.button {
  border-radius: 5rpx;
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #40a9ff;
  color: #fff;
  text-align: center;
}

.box {
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  min-height: 124rpx;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.list > .title {
  color: #333;
  width: 200rpx;
}

.list > .content {
  color: #666;
  flex: 1;
}

.button {
  margin-top: 20rpx;
}

.thumbs {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 40rpx 0;
}

.thumbs > view {
  width: 75rpx;
  height: 75rpx;
  margin: 10rpx 10rpx;
  border-radius: 50%;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  float: left;
}
