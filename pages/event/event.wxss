/* pages/event/event.wxss */
.box{
  width: 100%;
  height: auto;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.list{
  width: 100%;
  min-height: 124rpx;
  border-bottom: 4rpx solid #d9d9d9;
  display: flex;
  align-items: center;
  font-size: 44rpx; 
  padding: 10rpx 0; 
}
.list > .title{
  color: #333;
  width: 200rpx;
}
.list > .content{
  color: #666;
  flex: 1;
}
.button{
  margin-top: 20rpx;
}

.thumbs{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}
.thumbs > view{
  width: 100rpx;
  height: 100rpx; 
  margin: 10rpx 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.thumbs > view > image{
  width: 100%;
  height: 100%;
}